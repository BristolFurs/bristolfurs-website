{%- set webfontUrl =
  'https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,700;1,400&display=swap'
-%}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet"
      media="print"
      href="{{ webfontUrl }}"
      onload="this.media='all'" />
    <noscript>
      <link rel="stylesheet" media="all" href="{{ webfontUrl }}" />
    </noscript>
    <link rel="stylesheet" media="all" href="{{ '/assets/styles.css'|url }}" />
    <title>
      {%- if title %}
        {{ title }} &mdash;
      {% endif %}{{- siteMetadata.name -}}
    </title>
  </head>
  <body>
    {% block topOfPage %}
      <a class="bf-skiplink" href="#main-content">Skip to content</a>
    {% endblock %}

    <div class="bf-page-container">
      {% block header %}
        {% include 'global-header.njk' %}
      {% endblock %}

      <main class="bf-main {%- if mainClasses %} {{ mainClasses }}{% endif %}" id="main-content">
        {% block beforeMain %}
          {% include 'emergency-banner.njk' %}
        {% endblock %}
        
        {% block main %}
          {# Placeholder #}
        {% endblock %}
        
        {% block afterMain %}
          {# Placeholder #}
        {% endblock %}
      </main>

      {% block footer %}
        {% include 'global-footer.njk' %}
      {% endblock %}
    </div>

    {% block bottomOfPage %}
      {# Placeholder #}
    {% endblock %}

    {% block scripts %}
      <script src="{{ '/assets/all.js'|url }}"></script>
    {% endblock %}
  </body>
</html>
