{% extends 'src/_layouts/layout.njk' %}

{% block main %}
  <article class="bf-!-margin-block-end-xl">
  
    <header class="bf-landing">
      <div class="bf-container">
      
        <h1 class="bf-heading-4xl">
          {%- if pretitle %}
            <div class="bf-heading-2xl bf-!-margin-block-start-0 bf-!-margin-block-end-2xs">{{ pretitle }}</div>
          {%- endif %}
          {{ title }}
        </h1>
        
        {%- if lede %}
          <p class="bf-body-l bf-!-margin-block-end-0">{{ lede }}</p>
        {%- endif %}
        
      </div>
    </header>
    
    <div class="bf-container bf-prose">
      {{ content | safe }}
    </div>
    
  </article>
{% endblock %}