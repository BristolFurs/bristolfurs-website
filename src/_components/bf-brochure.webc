<div class="bf-brochure">
  <img webc:if="params.image" class="bf-brochure__image" :alt="params.image.alt" :src="params.image.src" />
  <div class="bf-brochure__body">
    <h2 class="bf-heading-3xl bf-!-margin-block-start-0" @text="params.name"></h2>
    <slot name="body"></slot>
    <a webc:if="params.href" class="bf-button" :href="params.href">
      <slot name="button"></slot>
    </a>
  </div>
</div>
